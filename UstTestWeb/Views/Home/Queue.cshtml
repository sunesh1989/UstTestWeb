@model List<UstTestWeb.Controllers.Account>
@{
    ViewBag.Title = "Queue";
}
<br/>
<div class="row">
<div class="col-md-6">
    <label><h3>Queue</h3></label>
</div>
    <div class="col-md-6 text-right">
        <button class="btn btn-primary" onclick="location.reload();">Refresh Queue</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">       
        @{
            if (Model.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Store Type Description</th>
                            <th>Opening Hours</th>
                            <th>Store Manager</th>
                            <th>Area Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Store_Type_Desc__c</td>
                                <td>@item.Opening_Hours_Main__c</td>
                                <td>@item.Store_Manager__c</td>
                                <td>@item.Area_Name__c</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="well well-lg">Queue is empty</div>
            }
        }

    </div>
</div>
